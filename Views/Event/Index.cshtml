@model IEnumerable<Fantastical_Events_2021.Models.Event>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h1>Have a look at our fun filled activites </h1>

<div>
    @foreach (var item in Model)
    {

        <a asp-controller="Event" asp-action="Browse" asp-route-activity="@item.EventId">@item.EventName</a>
        <br />
    }
</div>

